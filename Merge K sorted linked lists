import heapq

class Node:
    def __init__(self, x):
        self.data = x
        self.next = None

class Solution:
    def mergeKLists(self, arr):
        """
        :type arr: List[Node]
        :rtype: Node
        """
        # Min-heap for (node value, list index, node)
        heap = []
        for idx, node in enumerate(arr):
            if node:
                heapq.heappush(heap, (node.data, idx, node))
        
        dummy = Node(0)
        curr = dummy
        
        while heap:
            val, idx, node = heapq.heappop(heap)
            curr.next = node
            curr = curr.next
            if node.next:
                heapq.heappush(heap, (node.next.data, idx, node.next))
        
        return dummy.next
