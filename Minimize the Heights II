class Solution:
    def getMinDiff(self, arr, k):
        n = len(arr)
        arr.sort()
        
        ans = arr[-1] - arr[0]  # initial difference without modifications
        
        for i in range(n - 1):
            small = min(arr[0] + k, arr[i + 1] - k)
            big = max(arr[i] + k, arr[-1] - k)
            
            if small < 0:  # skip invalid (negative height)
                continue
                
            ans = min(ans, big - small)
        
        return ans
