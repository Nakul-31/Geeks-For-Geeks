class Node:
    def __init__(self, data):
        self.data = data
        self.next = None

class Solution:
    def segregate(self, head):
        if not head or not head.next:
            return head
        
        # Dummy heads for 0s, 1s, 2s
        zeroD = Node(-1)
        oneD = Node(-1)
        twoD = Node(-1)
        
        # Tails for 0s, 1s, 2s
        zero = zeroD
        one = oneD
        two = twoD
        
        # Traverse original list
        curr = head
        while curr:
            if curr.data == 0:
                zero.next = curr
                zero = zero.next
            elif curr.data == 1:
                one.next = curr
                one = one.next
            else:
                two.next = curr
                two = two.next
            curr = curr.next
        
        # Connect lists: 0s -> 1s -> 2s
        zero.next = oneD.next if oneD.next else twoD.next
        one.next = twoD.next
        two.next = None   # end of list
        
        # Return head (skip dummy)
        return zeroD.next
